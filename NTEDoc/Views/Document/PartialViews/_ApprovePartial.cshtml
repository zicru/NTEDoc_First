
@model NTEDoc.DataRepository.Document

<div class="custom-modal" id="approve-document-modal">
    <div class="custom-modal-content">
        <div class="modal-close">&times;</div>

        <div class="modal-title">Unesite komentar</div>

        <form enctype="multipart/form-data" method="post" asp-action="ChangeStatusApproved">
            <input type="hidden" asp-for="Id" />

            <textarea class="form-control" rows="3" name="comment"></textarea>

            <input type="submit" value="Odobri dokument" class="bttn bttn-regular bttn-regular-success">
        </form>
    </div>
</div>



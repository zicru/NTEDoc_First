@model NTEDoc.DataRepository.DocumentType

<div class="modal modal-success fade" id="modal-success">
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">Novi dokument</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>

        </div>
        <form enctype="multipart/form-data" method="post" asp-action="Create">
            <div id="greenBody" class="modal-body">
                <div class="row">
                    <div class="col-md-8">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Naziv" class="control-label"></label>
                            <input asp-for="Naziv" class="form-control" autocomplete="off" />
                            <span asp-validation-for="Naziv" class="text-danger"></span>
                        </div>
                        
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline pull-left" data-dismiss="modal">Odustani</button>
                <input type="submit" class="btn btn-outline" value="Sačuvaj" />
            </div>
        </form>
    </div>
    <!-- /.modal-content -->
</div>
<!-- /.modal-dialog -->
</div>
